<Window x:Class="ValidacijaXYZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValidacijaXYZ"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
	<UniformGrid Columns="2">
		<Label>Ime</Label>
		<TextBox Text="{Binding Path=Ime, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource StilZaTxt}"/>
		<Label>Prezime</Label>
		<TextBox Text="{Binding Path=Prezime, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource StilZaTxt}"/>
		<Label>E-mail</Label>
		<TextBox  Text="{Binding Path=Mejl, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource StilZaTxt}"/>
		<Label>Godiste</Label>
		<TextBox  Text="{Binding Path=Godiste, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource StilZaTxt}"/>
		<Label/>
		<Button Content="Unos" Click="Unos"/>
	</UniformGrid>
</Window>
